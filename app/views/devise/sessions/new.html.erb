<div>
  <h1 class = "headings">Sign In</h1>
</div>  

<% if flash[:notice] %>
  <div class="belowHeadingPageDescription"><%= flash[:notice] %></div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder:"Enter email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder:"Enter password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", :class => 'userFormSubmitButton' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
